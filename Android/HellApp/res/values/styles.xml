<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabBarStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <style name="TabViewStyle" parent="TabBarStyle">
        <item name="android:layout_width">63dp</item>
    </style>

    <style name="TabSeperatorStyle" parent="ContentImage">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="MainBannerStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TabTextStyle" parent="TabViewStyle">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">10dp</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>

    <style name="TabTextSelectedStyle" parent="TabTextStyle">
        <item name="android:textColor">#ffffbe</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabTextUnselectedStyle" parent="TabTextStyle">
        <item name="android:textColor">#8a8a8a</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ContentImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btnMain_textStyle" parent="ContentImage">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">30px</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="nowPlaying_programName_textStyle" parent="ContentImage">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">30px</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="nowPlaying_programWith_textStyle" parent="ContentImage">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">30px</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PlaylistHeadlineStyle">
        <item name="android:textSize">36px</item>
        <item name="android:typeface">sans</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlaylistRowStyle">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">24px</item>
    </style>

    <style name="PlaylistDaysStyle">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">31px</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:textColor">#e5322d</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlaylistRowTimeStyle" parent="PlaylistRowStyle">
        <item name="android:textColor">#a2a2a2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PlaylistRowNameStyle" parent="PlaylistRowStyle">
        <item name="android:shadowColor">#000000</item>
        <item name="android:textColor">#e5322d</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="PlaylistRowBroadcasterStyle" parent="PlaylistRowStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="ContactHeadlineStyle">
        <item name="android:textSize">36px</item>
        <item name="android:typeface">sans</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContactTextStyle">
        <item name="android:textSize">30px</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ContactTextBoldStyle" parent="ContactTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

</resources>